<% layout('layouts/boilerplate2') %>


<div class="card my-3 p-3">
    <div class="row">
        <div class="col-md-3">
            <h2 class="card-title mt-3"><%=offer.id_persona.username %></h2>

        </div>
    </div>
</div>
<div class="card my-3 p-3">
    <div class="row">
        <div class="col-md-4">
            <!-- Mostrar hasta 5 libros que tiene -->
            <h6>Libros que tiene:</h6>
            <ul>
                <% for (let i = 0; i < offer.id_persona.tiene_libros.length; i++) { %>
                <li><%= offer.id_persona.tiene_libros[i].nombre %></li>
                <% } %>

            </ul>
        </div>
        <div class="col-md-4">
            <!-- Mostrar hasta 5 libros que quiere -->
            <h6>Libros que quiere:</h6>
            <ul>
                <% for (let i = 0; i <  offer.id_persona.quiere_libros.length; i++) { %>
                <li><%= offer.id_persona.quiere_libros[i].nombre %></li>
                <% } %>

            </ul>
        </div>
        <div class="col-md-4">
            <!-- Mostrar hasta 5 libros que quiere -->
            <h6>Generos que busca:</h6>
            <ul>
                <% for (let i = 0; i <  offer.id_persona.genero_quiere.length; i++) { %>
                <li><%= offer.id_persona.genero_quiere[i] %></li>
                <% } %>

            </ul>
        </div>

    </div>
</div>

<div class="card my-3 p-3">
    <div class="row">
        <div class="col-md-3">
            <h2 class="card-title mt-3">Mensaje:</h2>
            <form action="/index/<%= offer.id_persona.username %>/offers/offer._id?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">

                <div class="mb-3">
                    <textarea class="form-control" name="texto" id="FormControlTextarea1" rows="3"
                        placeholder=""><%= offer.texto %>  </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Actualizar mensaje</button>
            </form>
        </div>
    </div>
</div>